<li class="chapter{{#selected}} selected{{/selected}}{{#unpublished}} unpublished{{/unpublished}}"
  data-blockid="{{id}}"
  data-title="{{title}}"
  data-publication="{{publication_date}}"
  data-type=Chapter
  {{#dom_title}}title="{{#i18n}}Freigegeben ab:{{/i18n}} {{visible_since_title}} {{dom_title}}"{{/dom_title}}>

  {{> chapter_title}}

  {{#selected}}
    <ol class=subchapters>

      {{#subchapters}}
        {{> subchapter}}
      {{/subchapters}}

      <li class=no-content>{{#i18n}}Keine Unterkapitel{{/i18n}}</li>
      <li class=controls>
        <button class=add-subchapter>{{#i18n}}Unterkapitel einfügen{{/i18n}}</button>
        <button class=init-sort-subchapter>{{#i18n}}Unterkapitel sortieren{{/i18n}}</button>
        <button class=stop-sort-subchapter>{{#i18n}}Sortieren abschließen{{/i18n}}</button>
        {{^active_subchapter.aside_section}}
          <button class=activate-aside-section>{{#i18n}}Seitenblöcke aktivieren{{/i18n}}</button>
        {{/active_subchapter.aside_section}}
        {{#active_subchapter.aside_section}}
          <button class=deactivate-aside-section data-type=Subchapter>{{#i18n}}Seitenblöcke entfernen{{/i18n}}</button>
        {{/active_subchapter.aside_section}}
      </li>
      <div class="clear"></div>
    </ol>
  {{/selected}}
</li>
